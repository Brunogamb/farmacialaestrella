---
interface Props {
    title: string;
}

const { title} = Astro.props;
---

<div class="page-header">
    <h1>{title}</h1>
    <div class="header-decoration"></div>
</div>

<style>
    .page-header {
        text-align: center;
        max-width: 95%;
        margin: 20px auto 0 auto;
    }

    h1 {
        font-size: 2.5rem;
        margin: 20px 0;
        color: var(--color-primary-dark);
    }

    .header-decoration {
        width: 60px;
        height: 4px;
        background: var(--color-accent);
        border-radius: 10px;
        margin: 0 auto;
    }

    @media (max-width: 1024px) {
        h1 {
            font-size: 2rem;
        }
    }
</style>
