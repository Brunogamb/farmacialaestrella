---
interface Props {
    title: string;
    subtitle?: string;
}

const { title, subtitle } = Astro.props;
---

<header class="page-header">
    <h1>{title}</h1>
    {subtitle && <h2>{subtitle}</h2>}
</header>

<style>
    .page-header {
        text-align: center;
        max-width: 95%;
        margin: 40px auto 0 auto;
    }

    h1 {
        font-size: 2.5rem;
        margin: 20px 0 30px 0;
        color: var(--color-accent);
    }

    h2 {
        font-size: 1.4rem;
        font-weight: 400;
        color: var(--color-text-light);
        margin-bottom: 20px;
    }

    @media (max-width: 1024px) {
        h1 {
            font-size: 2rem;
        }

        h2 {
            font-size: 1.2rem;
        }
    }
</style>
