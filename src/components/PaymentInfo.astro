<style>
    .payment-info {
        max-width: 1240px;
        padding: 0 20px;
        margin: auto;
        text-align: center;
        width: 100%;
    }

    h2 {
        font-size: 2.5rem;
        margin: 20px 0 30px;
        color: var(--color-accent);
    }

    .subtitle {
        font-size: 1.4rem;
        font-weight: 400;
        color: var(--color-text-light);
        margin-bottom: 50px;
    }

    .payment-grid {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 20px;
        margin-bottom: 20px;
    }

    .payment-card {
        background: var(--color-white);
        border-radius: 25px;
        padding: 20px 40px;
        box-shadow: 0 4px 12px var(--color-shadow);
        border: 2px solid var(--color-primary-lighter);
        transition: all 0.3s ease;
    }

    .payment-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 8px 20px var(--color-shadow-hover);
        border-color: var(--color-primary);
    }

    .icon-wrapper {
        width: 70px;
        height: 70px;
        margin: 0 auto 20px;
        background: linear-gradient(135deg, var(--color-primary) 0%, var(--color-primary-dark) 100%);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .icon-wrapper i {
        font-size: 2rem;
        color: var(--color-white);
    }

    .payment-card h3 {
        font-size: 1.3rem;
        color: var(--color-text);
        margin-bottom: 10px;
        font-weight: 600;
    }

    .payment-card p {
        color: var(--color-text-light);
        margin-bottom: 8px;
        font-size: 1rem;
    }

    @media (max-width: 1024px) {
        h2 {
            font-size: 2rem;
        }

        .subtitle {
            font-size: 1.2rem;
        }
    }

    @media (max-width: 768px) {
        .payment-info {
            padding: 0;
        }

        .payment-info h2 {
            font-size: 2rem;
        }

        .payment-grid {
            grid-template-columns: 1fr;
            gap: 15px;
            max-width: 95%;
            margin-left: auto;
            margin-right: auto;
        }
    }
</style>
