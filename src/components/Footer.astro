---
import { Image } from 'astro:assets';
import logoCombinado from '../assets/logocombinado.png';
---

<footer>
    <div class="footer-container">
        <div class="footer-brand">
            <a href="/"><Image src={logoCombinado} alt="Farmacia La Estrella" class="logo-combinado" /></a>
            <div class="social-pills">
                <a href="https://www.instagram.com/farmacia.laestrella/" target="_blank" rel="noopener noreferrer" aria-label="Instagram">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect width="20" height="20" x="2" y="2" rx="5" ry="5"/><path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"/><line x1="17.5" x2="17.51" y1="6.5" y2="6.5"/></svg>
                    <span>@farmacia.laestrella</span>
                </a>
            </div>
        </div>

        <div class="footer-contact">
            <h3>Contacto</h3>
            <div class="contact-item">
                <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"/></svg>
                <a href="tel:+543434311060">+54 343 431 1060</a>
            </div>
            <div class="contact-item">
                <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><rect width="20" height="16" x="2" y="4" rx="2"/><path d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"/></svg>
                <a href="mailto:laestrellapna@gmail.com">laestrellapna@gmail.com</a>
            </div>
        </div>

        <div class="footer-location">
            <h3>Ubicación</h3>
            <a href="/contacto">
                Italia 106, Paraná (3100)<div class="divider"></div>Entre Ríos, Argentina
            </a>
        </div>
    </div>

    <div class="footer-divider"></div>

    <div class="footer-bottom">
        <div class="bottom-container">
            <p>&copy; {new Date().getFullYear()} Farmacia La Estrella. Todos los derechos reservados.</p>
            <p class="dev-info">Desarrollado por <a href="https://github.com/BrunoGamb" rel="noopener noreferrer" target="_blank">BrunoGamb</a></p>
        </div>
    </div>
</footer>

<style>
    footer {
        background: linear-gradient(135deg, var(--color-primary) 0%, var(--color-primary-dark) 100%);
        box-shadow: 0 4px 6px var(--color-shadow);
        display: flex;
        flex-direction: column;
        color: var(--color-text-on-primary);
        padding: 40px 20px 20px 20px;
        text-wrap: balance;
    }

    .footer-container {
        max-width: 1200px;
        margin: 0 auto;
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 40px;
        padding-bottom: 20px;
        width: 100%;
    }

    footer h3 {
        text-transform: uppercase;
        font-size: 1.1rem;
        letter-spacing: 1.5px;
        margin-bottom: 10px;
        font-weight: 700;
        text-shadow: var(--color-shadow-text-on-primary);
    }

    .footer-divider {
        width: 100%;
        max-width: 1200px;
        height: 1px;
        background: linear-gradient(to right, rgba(255, 255, 255, 0.2) 0%, rgba(255, 255, 255, 1) 50%, rgba(255, 255, 255, 0.2) 100%);
        opacity: 0.6;
        grid-column: 1 / -1;
        margin: auto;
    }

    footer a:hover {
        color: var(--color-primary-light);
    }

    .logo-combinado {
        height: 60px;
        width: auto;
    }

    .social-pills a {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        background: var(--color-primary-dark);
        padding: 8px 16px;
        border-radius: 100px;
        color: var(--color-white);
        text-decoration: none;
        font-size: 0.9rem;
        transition: all 0.2s ease;
        margin-top: 10px;
    }

    .social-pills a:hover {
        background: var(--color-white);
        color: var(--color-primary-dark);
    }

    .contact-item {
        display: flex;
        align-items: center;
        gap: 12px;
        margin-bottom: 15px;
    }

    .contact-item a:hover {
        opacity: 1;
        color: var(--color-primary-light);
    }

    .bottom-container {
        max-width: 1200px;
        display: flex;
        justify-content: center;
        gap: 20px;
        align-items: center;
        font-size: 0.9rem;
        margin: 30px auto 10px auto;
        text-shadow: var(--color-shadow-text-on-primary);
    }

    .dev-info a {
        color: var(--color-white);
        text-decoration: none;
        font-weight: 700;
    }

    @media (max-width: 768px) {
        .footer-container {
            grid-template-columns: 1fr;
            text-align: center; 
            gap: 30px;
        }

        .contact-item {
            justify-content: center;
        }

        .bottom-container {
            flex-direction: column;
            gap: 10px;
            text-align: center;
        }
    }
</style>