import PageHeader from "../components/PageHeader.astro"
import Hero from "../components/Hero.astro"
import Slider from "../components/Slider.astro"
import PaymentInfo from "../components/PaymentInfo.astro"
---

<Layout title="Farmacia La Estrella | Productos farmacéuticos y Ofertas en Paraná, Entre Ríos">
